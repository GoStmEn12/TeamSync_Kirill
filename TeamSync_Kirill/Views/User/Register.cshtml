@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<div>
    <h1>ЗАПОВНІТЬ ФОРМУ РЕЄСТРАЦІЇ</h1>
    <form action="Register" method="post">
         @* <label for="login">Логін</label>
         <input type="text" id="login" name="login" placeholder="Введіть логін:" required /> *@

        <label for="login">Email</label>
        <input type="email" id="email" name="email" placeholder="Введіть email:" required />

        <label for="password">Пароль</label>
        <input type="password" id="password" name="password" placeholder="Введіть пароль:" required />
        <input type="password" id="repeat_password" name="repeat_password" placeholder="Повторіть пароль:" required />

        <button type="submit" value="register">ЗАРЕЄСТРУВАТИСЬ</button>

    </form>
</div>